<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_background1">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/orange"
        android:elevation="4dp"/>

    <ImageView
        android:id="@+id/query_image_preview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_image_placeholder_64"/>

    <TextView
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/query_image_preview"
        android:layout_alignTop="@id/query_image_preview"
        android:gravity="center"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/concept_count_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_label"
        android:layout_alignEnd="@id/date_label"
        android:layout_toRightOf="@id/query_image_preview"
        android:layout_marginTop="24dp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/query_image_preview"/>

    <TextView
        android:id="@+id/query_string_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/divider_view"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:background="@color/list_item_highlight2"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/query_string_field"/>

</RelativeLayout>